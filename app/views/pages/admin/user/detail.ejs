<%- include('../../../partials/head'); %>
<link rel="stylesheet" href="/static/assets/vendor/libs/flatpickr/flatpickr.css" />
<link rel="stylesheet" href="/static/assets/vendor/libs/select2/select2.css" />

</head>

<body>
<!-- Layout wrapper -->
<div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
        <!-- Menu -->

        <%- include('../../../components/menu'); %>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
            <!-- Navbar -->

            <%- include('../../../components/nav'); %>

            <!-- / Navbar -->

            <!-- Content wrapper -->
            <div class="content-wrapper">
                <!-- Content -->

                <div class="container-xxl flex-grow-1 container-p-y">
                    <h4 class="py-3 mb-4"><span class="text-muted fw-light">User /</span> User detail</h4>
                    <div class="card mb-4">
                        <form class="card-body">
                            <div style="margin-bottom: 15px">
                                <a href="/admin/user/edit/1">
                                    <button type="button" class="btn btn-primary me-sm-3 me-1 waves-effect waves-light">Edit</button>
                                </a>
                                <a href="javascript:void(0)">
                                    <button
                                            type="button"
                                            class="btn btn-danger me-sm-3 me-1 waves-effect waves-light"
                                            data-bs-toggle="modal"
                                            data-bs-target="#basicModal">
                                        Xóa
                                    </button>
                                </a>
                            </div>
                            <h4>1. Account information</h4>
                            <div class="row g-3">
                                <div class="col-sm-4">
                                    <span class="fw-medium me-1">Username: </span>
                                    <span><%= user.username %></span>
                                </div>
                                <div class="col-sm-4">
                                    <span class="fw-medium me-1">Role: </span>
                                    <span>Admin</span>
                                </div>
                                <div class="col-sm-4">
                                    <span class="fw-medium me-1">Status: </span>
                                    <span class="badge bg-label-success me-1">Active</span>
                                </div>
                            </div>
                            <hr class="my-4 mx-n4">
                            <h4>2. Personal information</h4>
                            <div class="row g-3">
                                <div class="col-sm-4">
                                    <span class="fw-medium me-1">Firstname: </span>
                                    <span><%= user.firstname %></span>
                                </div>
                                <div class="col-sm-4">
                                    <span class="fw-medium me-1">Lastname: </span>
                                    <span><%= user.lastname %></span>
                                </div>
                                <div class="col-sm-4">
                                    <span class="fw-medium me-1">Giới tính: </span>
                                    <span>Nam</span>
                                </div>
                                <div class="col-sm-4">
                                    <span class="fw-medium me-1">Ngày sinh: </span>
                                    <span>1/1/1970</span>
                                </div>
                                <div class="col-sm-4">
                                    <span class="fw-medium me-1">Email: </span>
                                    <span><%= user.email %></span>
                                </div>
                                <div class="col-sm-4">
                                    <span class="fw-medium me-1">Số điện thoại: </span>
                                    <span><%= user.phone %></span>
                                </div>
                                <div class="col-sm-12">
                                    <span class="fw-medium me-1">Địa chỉ: </span>
                                    <span>address </span>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- / Content -->

                <!-- Footer -->
                <%- include('../../../partials/footer'); %>
                <!-- / Footer -->

                <div class="content-backdrop fade"></div>
            </div>
            <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="basicModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel1">Xóa người dùng</h5>
                <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h2>Bạn có chắc là muốn xóa người dùng này?</h2>
                <form action="/admin/user/action-delete" method="post">
                    <input type="text" hidden="hidden" name="userId" value="1">
                    <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">
                        Không
                    </button>
                    <button type="submit" class="btn btn-danger">Có</button>
                </form>
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="confirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel1">Xác nhận doanh nghiệp</h5>
                <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h3>Bạn có chắc là muốn chuyển trạng thái xác nhận doanh nghiệp?</h3>
                <p>Sau khi thực hiện sẽ không thể hoàn tác</p>
                <form action="/admin/business/action-confirm" method="post">
                    <input type="text" hidden="hidden" name="userId" value="1">
                    <input type="text" hidden="hidden" name="userProfileId" value="1">
                    <input type="text" hidden="hidden" name="status" value="1">
                    <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">
                        Không
                    </button>
                    <button type="submit" class="btn btn-warning">Có</button>
                </form>
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="rejectModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel1">Từ chối doanh nghiệp</h5>
                <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h3>Bạn có chắc là muốn chuyển trạng thái từ chối doanh nghiệp?</h3>
                <p>Sau khi thực hiện sẽ không thể hoàn tác</p>
                <form action="/admin/business/action-confirm" method="post">
                    <input type="text" hidden="hidden" name="userId" value="1">
                    <input type="text" hidden="hidden" name="userProfileId" value="1">
                    <input type="text" hidden="hidden" name="status" value="2">
                    <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">
                        Không
                    </button>
                    <button type="submit" class="btn btn-danger">Có</button>
                </form>
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>
<!-- / Layout wrapper -->
<%- include('../../../partials/script'); %>
<script src="/static/assets/vendor/libs/cleavejs/cleave.js"></script>
<script src="/static/assets/vendor/libs/cleavejs/cleave-phone.js"></script>
<script src="/static/assets/vendor/libs/select2/select2.js"></script>
<script src="/static/assets/js/form-layouts.js"></script>
<script src="/static/assets/js/admin/user/createUser.js"></script>
<script src="/static/assets/js/admin/user/createUserValidation.js"></script>
</body>
</html>